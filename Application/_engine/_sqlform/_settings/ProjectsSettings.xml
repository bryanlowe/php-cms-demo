<?xml version="1.0"?>
<form_config>
  <form title="Projects">
    <input order="1" type="select" label="Select a project to edit" id="project_id" class="form-control primaryKey">
        <options>
            <option>
                <name>Please select a project</name>
                <value></value>
            </option>
        </options>
    </input>
    <input order="2" type="select" label="Select a client to attach to this project" id="client_id" class="form-control">
    	<options>
            <option>
                <name>Please select a client</name>
                <value></value>
            </option>
        </options>
    </input>
    <input order="3" type="text" label="Title" id="project_title" class="form-control"/>
    <input order="4" type="textarea" label="Description" id="description" class="form-control"/>
    <input order="5" type="button" id="saveBtn" value="SAVE ENTRY" onclick="saveProject();" class="btn btn-success"/>
    <input order="5" type="button" id="deleteBtn" value="DELETE ENTRY" onclick="deleteProject();" class="btn btn-danger"/>
  </form>
</form_config>
