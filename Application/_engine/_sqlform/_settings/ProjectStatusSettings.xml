<?xml version="1.0"?>
<form_config>
  <form title="Project Status">
    <input order="1" type="hidden" label="project_status_id" id="project_status_id" class="primaryKey"/>
    <input order="1" type="hidden" label="project_id" id="project_id"/>
    <input order="1" type="select" label="status" id="status" class="form-control">
    	<options>
	        <option>
	            <name>Created</name>
	            <value>Created</value>
	        </option>
	        <option>
	            <name>In Progress</name>
	            <value>In Progress</value>
	        </option>
	        <option>
	            <name>Closed</name>
	            <value>Closed</value>
	        </option>
	        <option>
	            <name>Completed</name>
	            <value>Completed</value>
	        </option>
	    </options>
    </input>
    <input order="2" type="textarea" label="description" id="description" class="form-control"/>
    <input order="1" type="hidden" label="project_status_date" id="project_status_date"/>
    <input order="3" type="button" id="saveBtn" value="UPDATE STATUS" onclick="saveStatus();" class="btn btn-success"/>
  </form>
</form_config>
